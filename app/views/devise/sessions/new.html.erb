  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-inline' }, method: :post  do |f| %>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "email" %>
    <%= f.input :password, required: false, label: false, placeholder: "password" %>
    <%= f.button :submit, "Log in", class: "log-in-btn" %>
  <% end %>
